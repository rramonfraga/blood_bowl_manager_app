<section class="container">
<h1>Add a new Community</h1>

<% if @community.errors.any? %>
  <ul class="list-unstyled">
    <% @community.errors.full_messages.each do |msg| %>
      <li class="alert alert-danger" role="alert"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @community do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <button type="submit" class="btn btn-blood">
    Add Community
  </button>
<% end %>
</section>