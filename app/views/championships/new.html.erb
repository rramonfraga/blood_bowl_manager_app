<section class="container">
<h1>Add a new Championship</h1>

<% if @championship.errors.any? %>
  <ul class="list-unstyled">
    <% @championship.errors.full_messages.each do |msg| %>
      <li class="alert alert-danger" role="alert"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @championship, url: community_championships_path() do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :kind %>
    <select name="kind" id="kind" class="form-control"  >
      <option value="League">League</option>
      <option value="Swiss">Swiss</option>
      <option value="Play-off">Play Offs</option>
    </select>
  </div>

  <div class="form-group">
    <%= form.label "Treasury" %>
    <%= form.number_field :init_treasury, class: 'form-control', default: 1000000 %>
  </div>

  <div class="actions">
    <%= form.submit (@championship.new_record? ? 'Create Team' : 'Update Team'), :class => "btn btn-blood" %>
  </div>
<% end %>
</section>